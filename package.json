{
  "name": "serverless-sharp-image",
  "version": "0.0.1",
  "description": "Serverless-based Lambda function to resize images based on S3 events with the awesome Sharp library",
  "main": "handler.js",
  "config": {
    "jsSrc": "src/"
  },
  "scripts": {
    "test": "ava",
    "watch:test": "ava --watch",
    "lint": "npm run lint:eslint -s",
    "lint:eslint": "eslint $npm_package_config_jsSrc",
    "deploy": "npm test && serverless deploy -v",
    "invoke": "serverless invoke --function sharpImage --path ./event.json --log",
    "postinstall": "cpy config.sample.json config.json && cpy event.sample.json event.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adieuadieu/serverless-sharp-image.git"
  },
  "keywords": [
    "serverless",
    "sharp",
    "libvips",
    "image",
    "resize",
    "optimize"
  ],
  "author": "Marco LÃ¼thy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adieuadieu/serverless-sharp-image/issues"
  },
  "homepage": "https://github.com/adieuadieu/serverless-sharp-image",
  "dependencies": {
    "aws-sdk": "^2.7.25",
    "babel-runtime": "6.20.0",
    "mime-types": "^2.1.14",
    "sharp": "^0.17.1",
    "sprintf-js": "1.0.3"
  },
  "devDependencies": {
    "ava": "0.17.0",
    "babel-core": "6.21.0",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.2.10",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-polyfill": "6.20.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-es2016": "6.16.0",
    "babel-preset-es2017": "6.16.0",
    "babel-preset-stage-3": "6.17.0",
    "babel-register": "6.18.0",
    "cpy-cli": "1.0.1",
    "decompress": "^4.0.0",
    "eslint": "^3.13.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-ava": "^4.0.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-promise": "3.4.0",
    "fs-extra": "^2.0.0",
    "json-loader": "0.5.4",
    "serverless": "^1.5.1",
    "serverless-webpack": "^1.0.0-rc.4",
    "webpack": "1.14.0"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "stage-3"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "import"
    ],
    "extends": [
      "airbnb-base",
      "plugin:ava/recommended"
    ],
    "settings": {
      "import/parser": "babel-eslint",
      "import/resolve": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    },
    "rules": {
      "no-console": 0,
      "max-len": [
        2,
        140,
        2
      ],
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "space-before-function-paren": [
        "error",
        "always"
      ]
    }
  }
}
